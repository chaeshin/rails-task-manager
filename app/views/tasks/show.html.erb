<div class="container">
  <div class='d-flex justify-content-between'>
    <h1 class='mt-4'><%= @task.title %></h1>
      <%= link_to 'Edit this task', edit_task_path, class: 'btn btn-light' %>
  </div>


  <p class='p-3 border border-secondary rounded bg-light '><%= @task.details %></p>
  <div class='d-flex align-items-center'>
    <%= check_box("tag", tag.id, {checked: @task.completed}) %>
    <p>
      <% if @task.completed %>
        <%= 'This task is completed' %>
      <% else %>
        <%= 'This task is not completed'%>
      <% end %>
    </p>
  </div>


    <%= link_to 'Back to list', tasks_path %>

</div>
